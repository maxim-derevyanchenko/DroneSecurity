<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="525.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unibo.dronesecurity.userapplication.controller.IssueController">
   <children>
      <Label layoutX="204.0" layoutY="14.0" text="Drone Issue Reporting" />
      <TabPane layoutX="58.0" layoutY="46.0" prefHeight="308.0" prefWidth="410.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Open Issues">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="openIssuesListView" layoutX="105.0" layoutY="41.0" prefHeight="224.0" prefWidth="200.0" />
                        <Label layoutX="173.0" layoutY="14.0" text="Open Issues" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Closed Issues">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="closedIssuesListView" layoutX="105.0" layoutY="41.0" prefHeight="224.0" prefWidth="200.0" />
                        <Label layoutX="170.0" layoutY="14.0" text="Closed Issues" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="New Issue">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label layoutX="14.0" layoutY="14.0" text="Info" />
                        <TextArea fx:id="infoTextArea" layoutX="14.0" layoutY="38.0" prefHeight="166.0" prefWidth="382.0" />
                        <Button fx:id="sendIssueButton" layoutX="275.0" layoutY="240.0" mnemonicParsing="false" onAction="#sendIssue" text="Send" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
      <Button fx:id="newIssueButton" layoutX="398.0" layoutY="361.0" mnemonicParsing="false" text="New Issue" />
   </children>
</AnchorPane>
