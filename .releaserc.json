{
  "tagFormat": "${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [ "@semantic-release/git", {
      "message": "chore(release): ${nextRelease.version}"
    }],
    [ "@semantic-release/github" , {
      "assets": [
        { "path": "drone-system/build/libs/drone-system-fat.jar", "label": "Drone System executable JAR" },
        { "path": "user-application/build/libs/user-application-Windows-fat.jar", "label": "User Application executable JAR for Windows" },
        { "path": "user-application/build/libs/user-application-macOS-fat.jar", "label": "User Application executable JAR for MacOS" },
        { "path": "user-application/build/libs/user-application-Linux-fat.jar", "label": "User Application executable JAR for Linux" }
      ]
    }]
    ]
}
