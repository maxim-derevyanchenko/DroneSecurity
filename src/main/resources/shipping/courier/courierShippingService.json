{
  "openapi": "3.0.3",
  "info": {
    "title": "Service that exposes Courier Shipping operations.",
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "http://localhost:80/{basePath}",
      "description": "Localhost server",
      "variables": {
        "basePath": {
          "default": "courierShippingService"
        }
      }
    }
  ],
  "paths": {
    "/performDelivery": {
      "post": {
        "operationId": "performDelivery",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Order"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Performing delivery.",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Order": {
        "type": "object",
        "properties": {
          "product": {
            "type": "string"
          },
          "orderDate": {
            "type": "string",
            "pattern": "^\\d\\d\\d\\d-(0?[1-9]|1[0-2])-(0?[1-9]|[12][0-9]|3[01]) (00|[0-9]|1[0-9]|2[0-3]):([0-9]|[0-5][0-9]):([0-9]|[0-5][0-9])$"
          }
        }
      }
    }
  }
}
